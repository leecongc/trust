/*首页搜索*/
.header{
  height: 80rpx;
  width: 100%;
  background: white;
  padding: 4rpx 20rpx;
  display: flex;
  align-items: center; /*设置内容居中*/
  box-shadow: 0px 1px 8px #888888;
}
.header-inp{
  font-size: 26rpx;
  width: 75%;
  border: 1px solid #CFCFCF;
  border-radius: 8rpx;
  margin-right: 8rpx;
}
/*轮播图*/
 .nav-img{
  margin-top: 10rpx;
} 
/*主体区域*/
.body{
  width: 100%;
}

.body-list{
  margin-top: 8rpx;
  display: flex;
}

.body-list-content{
  border-radius: 8rpx;
  margin: 6rpx;
  /* border: 1px solid #888888; */
   box-shadow: 0px 1px 2px #888888; 
  height: 160rpx;
  flex: 1;
}

/*新闻列表*/
.news-list-head{
  margin: 20rpx 14rpx;
  padding: 10rpx 0;
  border-bottom: 2px solid #B0E0E6;
  height: 60rpx;
}
.news-list-head image{
  width:60rpx;
  height:60rpx;
}
/*写到此处，接下来要写左右浮动*/
.news-list-content{
  height: 60rpx;
  background-color: #eee;
  margin: 6rpx 20rpx;
  border-bottom: 1px solid #ccc;
}